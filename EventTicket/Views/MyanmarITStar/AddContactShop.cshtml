@using EventTicket.App_Code;
@using System.Data;
@{
    Base b = new Base();
    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/HteUser.cshtml";
    DataTable dtContactShop = new DataTable();
}


@using (Html.BeginForm("ProcessAddContactShop", "MyanmarITStar"))
{
    <p class="zg">
        <div class="contentHeadBox">
            <div class="row">
                <div class="col-md-4">
                    <span class="zg"><input type="text" name="Name" placeholder="အမည္​ျဖည္​့ပါ " class="form-control" required /></span>
                </div>
                <div class="col-md-4">
                    <span class="zg"><input type="number" name="Phone" placeholder="ဖုန္​းနံပါတ္ျဖည္​့ပါ​" class="form-control" required /></span>
                </div>
                <div class="col-md-4">
                    <center> <span class="zg"><input type="submit" class="btn btn-primary" value="ထည္​့မည္" /></span></center>
                 </div>
            </div>
        </div>
    </p>
}

<div class="contentBodyBox">
    <table id="displayTable" class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 10px">No</th>
                <th> <span class="zg">Name</span>​</th>
                <th style="width: 40px"> <span class="zg">Phone</span></th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
                dtContactShop = b.getAllByQuery("select * from ContactShop");
                foreach (DataRow rows in dtContactShop.Rows)
                {
                    <tr>
                        <td>@i</td>
                        <td>
                            <span class="zg"> @rows["Name"]</span>
                        </td>
                        <td>
                            <span class="zg">@rows["Phone"]</span>
                        </td>
                    </tr>
                                        i++;
                                    }
            }
        </tbody>
    </table>
</div>